.container
  .row
    .col-sm-offset-3.col-sm-6
      .panel.panel-default.login-form
        .panel-body
          .row
            .col-sm-offset-1.col-sm-10.form-group
              .row
                .col-xs-4
                  %h4 Sign up
                .col-xs-8
                  .text-right.login-form-top-right-text
                    Have an account?
                    =link_to("Log in.", new_user_session_path)
          .row
            .col-sm-offset-1.col-sm-10.form-group

              = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                %p.bg-danger
                  = f.error_notification
                .form-inputs
                  .right-inner-addon
                    %i.glyphicon.glyphicon-user
                    = f.input :first_name, label: false, placeholder: "First Name", input_html: { class: 'form-control' }
                  .right-inner-addon
                    %i.glyphicon.glyphicon-user
                    = f.input :last_name, label: false, placeholder: "Last Name", input_html: { class: 'form-control' }
                  .right-inner-addon
                    %i.glyphicon.glyphicon-envelope
                    = f.input :email, label: false, placeholder: "Email address", input_html: { class: 'form-control' }
                  .right-inner-addon
                    %i.glyphicon.glyphicon-lock
                    = f.input :password, label: false, placeholder: "Password", input_html: { class: 'form-control' }
                  .right-inner-addon
                    %i.glyphicon.glyphicon-lock
                    = f.input :password_confirmation, label: false, placeholder: "Password Confirmation", input_html: { class: 'form-control' }
                .form-actions.login-button
                  = f.button :submit, "Sign up", :class => "btn btn-primary rect-button form-control"
